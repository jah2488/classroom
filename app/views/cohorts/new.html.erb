<%= render partial: 'instructor_dashboard/nav', locals: { cohort: cohort } %>

<div class='col-lg-4 col-lg-offset-4'>
  <h1><%= t('.title') %> </h1>
  <%= simple_form_for(cohort) do |f| %>
    <div class='form-inputs'>
      <%= f.input :name %>
      <%= f.input :campus_id, collection: Campus.all, hint: t('.location-hint') %>
      <%= f.input :first_day, as: :date %>
    </div>
    <div class='form-actions'>
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
