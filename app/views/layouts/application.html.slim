doctype html
html
  head
    meta[charset="utf-8"]
    meta[http-equiv="X-UA-Compatible" content="IE=edge"]
    title
      = t('.title', title: local_assigns[:title])
    meta[name="description" content=""]
    meta[name="viewport" content="width=device-width, initial-scale=1"]
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/material-fullpalette.min.css', media: 'all'
    = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/ripples.min.css'
    = csrf_meta_tags
  body
    header.main-header
      .row
        .col-sm-4
          h1
            = link_to t('.header-title'), dashboard_path
          .visible-xs-inline[style="float:right;"]
            .dropdown
              button#mobileNav.btn.btn-default.dropdown-toggle[type="button" data-toggle="dropdown" aria-expanded="true"]
                ' Menu
                span.caret
              ul.dropdown-menu[style="left: -87px;" role="menu" aria-labelledby="dropdownMenu1"]
                - if student_signed_in?
                  li[role="presentation"]
                    = active_link_to('Dashboard', dashboard_path)
                  li[role="presentation"]
                    = active_link_to('Cohort', my_cohort_path)
                  li[role="presentation"]
                    = active_link_to('Profile', profile_path(current_student))
                  li.divider[role="presentation"]
                  li[role="presentation"]
                    = active_link_to('Logout', destroy_student_session_path, class: 'danger', method: :delete)
                - else
                  li[role="presentation"]
                    = active_link_to('Student Signin', new_student_session_path)
                - if instructor_signed_in?
                  li[role="presentation"]
                    = active_link_to('Staff Dashboard', staff_root_path)
                  li[role="presentation"]
                    = active_link_to('Instructor Logout', destroy_instructor_session_path, class: 'danger', method: :delete)
        .hidden-xs.col-sm-8
          nav
            ul.nav.nav-pills.pull-right
              - if student_signed_in?
                li
                  = active_link_to('Dashboard', dashboard_path)
                li
                  = active_link_to('Cohort', my_cohort_path)
                li
                  = active_link_to('Profile', profile_path(current_student))
                - if current_student || current_instructor
                  li = active_link_to("Reports", reports_path)
                li
                  = active_link_to('Logout', destroy_student_session_path, class: 'danger', method: :delete)
              - else
                li
                  = active_link_to('Student Signin', new_student_session_path)
              - if instructor_signed_in?
                li
                  = active_link_to('Staff Dashboard', staff_root_path)
                li
                  = active_link_to('Instructor Logout', destroy_instructor_session_path, class: 'danger', method: :delete)
    span class='hidden' id='loc-data' data-location="#{distance_from_current_cohort}"
    main
      .container-fluid
        .row
          .content.col-lg-12
            .notices
              - flash.each do |key, value|
                = display_flash(key, value)
            = yield
    script[data-turbolinks-track="true"]
      |  <ruby code=" if current_student || current_instructor "> _loggedIn = true; </ruby><ruby code="else"> _loggedIn = false; </ruby> 
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/js/material.min.js'
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/js/ripples.min.js'
