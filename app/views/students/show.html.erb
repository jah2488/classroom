<div class='row'>
  <div class='col-md-offset-3 col-md-6'>
    <div class='row'>
      <div class='col-md-12'>
        <%= image_tag avatar_url(student.user), class: 'center-block circle' %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <h1 class='text-center'><%= student.user.name %></h1>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <%= student.bio %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-8'>
        Github: <%= link_to student.user.github, "https://github.com/#{student.user.github}" %>
      </div>
      <div class='col-md-4'>
        Phone: <%= link_to student.phone, "tel://#{student.phone}" %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-8'>
        Twitter <%= link_to student.twitter, "https://twitter.com/#{student.twitter}" %>
      </div>
      <div class='col-md-4'>
        Blog: <%= link_to truncate(student.blog, length: 23), student.blog %>
      </div>
    </div>

    <% if policy(student).edit? %>
      <%= link_to 'Edit', edit_student_path(student),  class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class='col-md-6'>
    <section>
      <header>
        <h3>Badges</h3>
      </header>
      <div class='row'>
        <div class='col-sm-12 badges'>
          <% student.badge_list.each_with_index do |badge_set, i| %>
            <% badge_set.each do |badge| %>
              <div class='col-md-3 col-sm-4 col-xs-6'>
                <span class="<%= 'tint' unless i.zero? %> circle">
                  <%= image_tag attachment_url(badge, :icon_image, :fill, 200, 200, format: 'png'), class: 'shadow-z-1 circle student-badge',
                     tabindex: 0, 'data-trigger': "focus",
                    'data-toggle': 'popover', 'data-placement': 'bottom', 'data-title': badge.name, 'data-content': badge.description %>
                </span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
  <div class='col-md-6'>
    <section>
      <header>
        <h3>Stats</h3>
      </header>
      <table class='table table-hover'>
        <thead>
        </thead>
        <tbody>
          <tr>
            <td class='align-middle'>Tardies</td><td><h3><%= student.tardies %></h3></td>
          </tr>
          <tr>
            <td class='align-middle'>Absences</td><td><h3><%= student.absences %></h3></td>
          </tr>
          <tr>
            <td class='align-middle'>Completed Assignments</td><td><h3><%= student.complete_percentage * 100 %>%</h3></td>
          </tr>
          <tr>
            <td class='align-middle'>Past Due Assignments</td><td><h3><%= student.past_due_count %></h3></td>
          </tr>
        </tbody>
      </table>
    </section>
  </div>
</div>

