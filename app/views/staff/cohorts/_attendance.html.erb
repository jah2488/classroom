<section>
  <header>
    <h3><%= t('.attendance') %></h3>
  </header>
  <% if cohort.current_day %>
    <h4>Current Day: <%= cohort.current_day.created_on %></h4>
    <p class='muted'>Start:</p> <%= cohort.current_day.starts_at %>
    <p class='muted'>Override:</p> <pre><code><%= cohort.current_day.override_code%></code></pre>
    <%= react_component('StudentCheckinList', checkins: cohort.current_day.checkins.map(&:as_hash), student_count: cohort.students.count) %>
  <% else %>
    No Current Day
  <% end %>
</section>
