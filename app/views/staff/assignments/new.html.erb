<%= render partial: 'nav', locals: {cohort: cohort} %>
<h1>New Assignment</h1>

<%= simple_form_for(assignment, url: staff_cohort_assignments_path, method: :post) do |f| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-warning flash" role="alert">
        The assignment contains <%= pluralize(assignment.errors.count, "error") %>.
      </div>
      <ul>
        <% assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-inputs'>
    <%= f.input :title, required: true %>
    <%= f.input :info, hint: 'put markdown in me', required: true %>
    <%= f.input :due_date, as: :string, input_html: { class: 'datetimepicker', value: (Time.zone.tomorrow + 8.hours) }, required: true %>
    <%= react_component('AssignmentTags', tags: Tag.all, tag_ids: assignment.tag_ids) %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit %>
  </div>
<% end %>
