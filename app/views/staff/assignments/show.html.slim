= render partial: 'nav', locals: { cohort: assignment.cohort.decorate}
.row
  h3.col.s12.m4 = assignment.title
  h3.col.s12.m4
    | Due:
    = react_time(assignment.due_date)
.row = react_md assignment.info
.row
  .col.s12
    ul.tabs
      li.tab.col.s3
        a href="#submitted"
          = submitted.count
          |  Submitted
      li.tab.col.s3
        a href="#unsubmitted"
          = unsubmitted.count
          |  Unsubmitted
  #submitted.col.s12
    - unless submitted.empty?
      .collection
        - submitted.each do |submission|
          = link_to submission, class: "collection-item" do
            - if submission.student
              = submission.student.name
            - if submission.late
              .chip.right late
            - if submission.unfinished?
              .chip.right unfinished
            - if submission.complete?
              .chip.right complete
    - else
      p No submissions
  #unsubmitted.col.s12
    - unless unsubmitted.empty?
      .collection
        - unsubmitted.order(:last_active_at).each do |student|
          - student = student.decorate
          = link_to student, class: "collection-item" do
            = student.name
    - else
      Everyone submitted
.fixed-action-btn style="bottom: 45px; right: 24px;"
  = link_to material_icon.assignment, edit_staff_cohort_assignment_path(assignment.cohort, assignment), class: "btn-floating btn-large waves-effect waves-light green"
